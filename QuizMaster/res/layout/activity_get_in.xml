<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_box"
    tools:context=".GetInActivity" >

    <LinearLayout
        android:id="@+id/GlinearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText1"
        android:layout_alignTop="@+id/textView2"
        android:layout_marginLeft="78dp"
        android:background="@color/OliveDrab"
        android:orientation="vertical" >

    </LinearLayout>

    <SurfaceView
        android:id="@+id/surfaceView1"
        android:layout_width="1dp" 
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/GtextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/GtextView1"
        android:layout_below="@+id/GtextView1"
        android:layout_marginTop="82dp"
        android:height="50dp"
        android:text="Select Quiz:"
        android:textColor="#000000"
        android:textSize="30dp"
        android:width="170dp" />

    <Spinner
        android:id="@+id/Gspr1"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/GeTextName"
        android:layout_alignTop="@+id/GtextView2"
        android:layout_marginLeft="51dp"
        android:background="@drawable/gradient_box" />

    <TextView
        android:id="@+id/GtextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/GlinearLayout1"
        android:layout_below="@+id/GlinearLayout1"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="55dp"
        android:height="50dp"
        android:text="name:"
        android:textColor="#000000"
        android:textSize="40dp"
        android:width="130dp" />

    <Button
        android:id="@+id/Gbutton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/GlinearLayout1"
        android:layout_marginBottom="27dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/customborder"
        android:height="60dp"
        android:minHeight="5dp"
        android:shadowColor="#cccccc"
        android:text="Go for it..."
        android:textSize="30dp"
        android:width="150dp" />

    <EditText
        android:id="@+id/GeTextName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/GtextView2"
        android:layout_toRightOf="@+id/GtextView1"
        android:background="@drawable/gradient_box"
        android:maxWidth="50dp"
        android:ems="10"
        android:inputType="textPersonName" >
        <requestFocus />
    </EditText>

</RelativeLayout>